                        </a>
                    </li>*@
                    <li>
                        <a href="@Url.Action("HabitesDashboard","Analytics")">
                            <i class="fa fa-clock-o"></i> <span>Time Dashboard</span>
                        </a>
                    </li>
                    @*<li>
                        <a href="@Url.Action("EffortDashboard","Analytics")">
                            <i class="fa fa-users"></i> <span>Effort Dashboard</span>
                        </a>
                    </li>*@
                    @*<li>
                        <a href="@Url.Action("ComparisonDashboard","Analytics")">
                            <i class="fa fa-retweet"></i> <span>Comparison Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("LeaveEncashDashboard","Analytics")">
                            <i class="fa fa-money"></i> <span>Leave Encash Dashboard</span>
                        </a>
                    </li>*@
                    
                    @*<li>
                        <a href="@Url.Action("DelayedSignInDashboard","Analytics")">
                            <i class="fa fa-hourglass-end"></i> <span>Delayed Signin Dashboard</span>
